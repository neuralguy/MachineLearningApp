                    android:layout_marginTop="15dp"/>

                <ImageView
                    android:id="@+id/der_2_img"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:layout_marginTop="20dp"
                    android:contentDescription="@string/der_2"
                    app:srcCompat="@drawable/der_2" />

                <TextView
                    android:id="@+id/der_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="@string/der_2"
                    android:theme="@style/signature" />

                <TextView
                    android:id="@+id/backpropagation_text11"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/backpropagation_text11"
                    android:theme="@style/defaultText"
                    android:layout_marginTop="15dp"/>

                <ImageView
                    android:id="@+id/diff_log_img"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_marginTop="20dp"
                    android:contentDescription="@string/diff_log"
                    app:srcCompat="@drawable/diff_log" />

                <TextView
                    android:id="@+id/diff_log"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="@string/diff_log"
                    android:theme="@style/signature" />

                <TextView
                    android:id="@+id/backpropagation_text12"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/backpropagation_text12"
                    android:theme="@style/defaultText"
                    android:layout_marginTop="15dp"/>

                <ImageView
                    android:id="@+id/express_diff_img"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_marginTop="20dp"
                    android:contentDescription="@string/express_diff"
                    app:srcCompat="@drawable/express_diff" />

                <TextView
                    android:id="@+id/express_diff"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="@string/express_diff"
                    android:theme="@style/signature" />

                <TextView
                    android:id="@+id/backpropagation_text13"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/backpropagation_text13"
                    android:theme="@style/defaultText"
                    android:layout_marginTop="15dp"/>

                <ImageView
                    android:id="@+id/der_3_img"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:layout_marginTop="20dp"
                    android:contentDescription="@string/der_3"
                    app:srcCompat="@drawable/der_3" />

                <TextView
                    android:id="@+id/der_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="@string/der_3"
                    android:theme="@style/signature" />

                <TextView
                    android:id="@+id/backpropagation_text14"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/backpropagation_text14"
                    android:theme="@style/defaultText"
                    android:layout_marginTop="15dp"/>

                <TextView
                    android:id="@+id/learning_rate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="100dp"
                    android:theme="@style/linkText"
                    android:text="@string/learning_rate" />

                <TextView
                    android:id="@+id/learning_rate_text1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/learning_rate_text1"
                    android:theme="@style/defaultText"
                    android:layout_marginTop="15dp"/>
            </LinearLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fabScrollToTop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:layout_gravity="end|top"
            android:visibility="invisible"
            android:src="@drawable/up_arrow"
            app:backgroundTint="@color/fab_button" />

    </androidx.coordinatorlayout.widget.CoordinatorLayout>

    <com.google.android.material.navigation.NavigationView
        android:id="@+id/nav_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:fitsSystemWindows="true"
        app:headerLayout="@layout/nav_header"
        app:menu="@menu/menu_drawer" />
</androidx.drawerlayout.widget.DrawerLayout>