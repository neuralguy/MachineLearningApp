                    android:theme="@style/defaultText"
                    android:layout_marginTop="15dp"/>

                <ImageView
                    android:id="@+id/chain_rule_img"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:layout_marginTop="20dp"
                    android:contentDescription="@string/chain_rule"
                    app:srcCompat="@drawable/chain_rule" />

                <TextView
                    android:id="@+id/chain_rule"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="@string/chain_rule"
                    android:theme="@style/signature" />

                <TextView
                    android:id="@+id/backpropagation_text5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/backpropagation_text5"
                    android:theme="@style/defaultText"
                    android:layout_marginTop="15dp"/>

                <ImageView
                    android:id="@+id/connections_img"
                    android:layout_width="match_parent"
                    android:layout_height="250dp"
                    android:layout_marginTop="20dp"
                    android:contentDescription="@string/connections"
                    app:srcCompat="@drawable/connections" />

                <TextView
                    android:id="@+id/connections"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="@string/connections"
                    android:theme="@style/signature" />

                <TextView
                    android:id="@+id/backpropagation_text8"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/backpropagation_text8"
                    android:theme="@style/defaultText"
                    android:layout_marginTop="15dp"/>

                <ImageView
                    android:id="@+id/chain_rule_explain_img"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_marginTop="20dp"
                    android:contentDescription="@string/chain_rule_explain"
                    app:srcCompat="@drawable/chain_rule_explain" />

                <TextView
                    android:id="@+id/chain_rule_explain"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="@string/chain_rule_explain"
                    android:theme="@style/signature" />

                <TextView
                    android:id="@+id/backpropagation_text9"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/backpropagation_text9"
                    android:theme="@style/defaultText"
                    android:layout_marginTop="15dp"/>

                <ImageView
                    android:id="@+id/der_1_img"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:layout_marginTop="20dp"
                    android:contentDescription="@string/der_1"
                    app:srcCompat="@drawable/der_1" />

                <TextView
                    android:id="@+id/der_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="@string/der_1"
                    android:theme="@style/signature" />

                <TextView
                    android:id="@+id/backpropagation_text10"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/backpropagation_text10"
