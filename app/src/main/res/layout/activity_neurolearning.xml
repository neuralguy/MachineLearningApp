<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context=".NeuroLearning">

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="0dp">

            <Button
                android:id="@+id/themeLayout"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:enabled="false"
                android:alpha="0"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"/>

            <LinearLayout
                android:id="@+id/tipslearning_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_marginHorizontal="10dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent">

                <TextView
                    android:id="@+id/textView1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="@string/content"
                    android:textAlignment="center"
                    android:textSize="40sp"
                    android:textStyle="bold"
                    android:theme="@style/defaultText" />

                <TextView
                    android:id="@+id/neurolearning_menu1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:layout_marginTop="10dp"
                    android:theme="@style/linkText"
                    android:text="@string/neurolearning_menu1" />

                <TextView
                    android:id="@+id/neurolearning_menu2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:layout_marginTop="10dp"
                    android:theme="@style/linkText"
                    android:text="@string/neurolearning_menu2" />

                <TextView
                    android:id="@+id/neurolearning_menu3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:layout_marginTop="10dp"
                    android:theme="@style/linkText"
                    android:text="@string/neurolearning_menu3" />

                <TextView
                    android:id="@+id/neurolearning_menu4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:layout_marginTop="10dp"
                    android:theme="@style/linkText"
                    android:text="@string/neurolearning_menu4" />

                <TextView
                    android:id="@+id/howneurolearning"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="100dp"
                    android:theme="@style/linkText"
                    android:text="@string/howneurolearning" />

                <TextView
                    android:id="@+id/neuralnet_learning_text1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/howneurolearning_text1"
                    android:theme="@style/defaultText"
                    android:layout_marginTop="15dp"/>

                <TextView
                    android:id="@+id/lossfunction"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="100dp"
                    android:theme="@style/linkText"
                    android:text="@string/lossfunction" />

                <TextView
                    android:id="@+id/lossfunction_text1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/lossfunction_text1"
                    android:theme="@style/defaultText"
                    android:layout_marginTop="15dp"/>

                <ImageView
                    android:id="@+id/mse_img"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:layout_marginTop="20dp"
                    android:contentDescription="@string/neuron"
                    app:srcCompat="@drawable/mse" />

                <TextView
                    android:id="@+id/mse"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="@string/mse"
                    android:theme="@style/signature" />

                <TextView
                    android:id="@+id/lossfunction_text2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/lossfunction_text2"
                    android:theme="@style/defaultText"
                    android:layout_marginTop="15dp"/>

                <TextView
                    android:id="@+id/backpropagation"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="100dp"
                    android:theme="@style/linkText"
                    android:text="@string/backpropagation" />

                <TextView
                    android:id="@+id/backpropagation_text1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/backpropagation_text1"
