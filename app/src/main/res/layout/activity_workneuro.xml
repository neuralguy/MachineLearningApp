<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context=".WorkNeuro">

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="0dp">

            <Button
                android:id="@+id/themeLayout"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:enabled="false"
                android:alpha="0"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"/>

            <LinearLayout
                android:id="@+id/tipslearning_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_marginHorizontal="10dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent">

                <TextView
                    android:id="@+id/textView1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="@string/content"
                    android:textAlignment="center"
                    android:textSize="40sp"
                    android:textStyle="bold"
                    android:theme="@style/defaultText" />

                <TextView
                    android:id="@+id/workneuro_menu1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:layout_marginTop="10dp"
                    android:theme="@style/linkText"
                    android:text="@string/workneuro_menu1" />

                <TextView
                    android:id="@+id/workneuro_menu2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:layout_marginTop="10dp"
                    android:theme="@style/linkText"
                    android:text="@string/workneuro_menu2" />

                <TextView
                    android:id="@+id/workneuro_menu3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:layout_marginTop="10dp"
                    android:theme="@style/linkText"
                    android:text="@string/workneuro_menu3" />

                <TextView
                    android:id="@+id/whats_neural_network"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="100dp"
                    android:theme="@style/linkText"
                    android:text="@string/whats_neural_network" />

                <TextView
                    android:id="@+id/whats_neural_network_text1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/whats_neural_network_text1"
                    android:theme="@style/defaultText"
                    android:layout_marginTop="15dp" />

                <ImageView
                    android:id="@+id/perceptron_img"
                    android:layout_width="match_parent"
                    android:layout_height="250dp"
                    android:layout_marginTop="20dp"
                    android:contentDescription="@string/perceptron"
                    app:srcCompat="@drawable/perceptron" />

                <TextView
                    android:id="@+id/perceptron"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="@string/perceptron"
                    android:theme="@style/signature" />

                <TextView
                    android:id="@+id/whats_neural_network_text2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/whats_neural_network_text2"
                    android:theme="@style/defaultText"
                    android:layout_marginTop="15dp"/>

                <ImageView
                    android:id="@+id/neural_net_img"
                    android:layout_width="match_parent"
                    android:layout_height="250dp"
                    android:layout_marginTop="20dp"
                    android:contentDescription="@string/neuron"
                    app:srcCompat="@drawable/neural_net" />

                <TextView
                    android:id="@+id/neural_work"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="@string/neural_work"
                    android:theme="@style/signature" />

                <TextView
                    android:id="@+id/activation_function"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="100dp"
                    android:theme="@style/linkText"
                    android:text="@string/activation_function" />

                <TextView
                    android:id="@+id/activation_function_text1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/activation_function_text1"
                    android:theme="@style/defaultText"
                    android:layout_marginTop="15dp"/>

                <ImageView
                    android:id="@+id/linear_img"
                    android:layout_width="match_parent"
                    android:layout_height="250dp"
                    android:layout_marginTop="20dp"
                    android:contentDescription="@string/linear"
                    app:srcCompat="@drawable/linear" />

                <TextView
                    android:id="@+id/linear"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="@string/without_func"
                    android:theme="@style/signature" />

                <ImageView
                    android:id="@+id/not_linear_img"
                    android:layout_width="match_parent"
                    android:layout_height="250dp"
                    android:layout_marginTop="20dp"
                    android:contentDescription="@string/not_linear"
                    app:srcCompat="@drawable/not_linear" />

                <TextView
                    android:id="@+id/not_linear"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="@string/with_func"
                    android:theme="@style/signature" />

                <TextView
                    android:id="@+id/activation_function_text2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/activation_function_text2"
                    android:theme="@style/defaultText"
                    android:layout_marginTop="15dp"/>

                <TextView
                    android:id="@+id/types_of_functions"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="100dp"
                    android:theme="@style/linkText"
                    android:text="@string/types_of_functions" />

                <TextView
                    android:id="@+id/types_of_functions_text1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/types_of_functions_text1"
                    android:theme="@style/defaultText"
                    android:layout_marginTop="15dp"/>

                <ImageView
                    android:id="@+id/relu_img"
                    android:layout_width="match_parent"
                    android:layout_height="250dp"
                    android:layout_marginTop="20dp"
                    android:contentDescription="@string/not_linear"
                    app:srcCompat="@drawable/relu" />

                <TextView
                    android:id="@+id/textView23"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/types_of_functions_text2"
                    android:theme="@style/defaultText"
                    android:layout_marginTop="15dp"/>

                <ImageView
                    android:id="@+id/leaky_relu_img"
                    android:layout_width="match_parent"
                    android:layout_height="250dp"
                    android:layout_marginTop="20dp"
                    android:contentDescription="@string/copy"
                    app:srcCompat="@drawable/leaky_relu" />

                <TextView
                    android:id="@+id/types_of_functions_text3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/types_of_functions_text3"
                    android:theme="@style/defaultText"
                    android:layout_marginTop="15dp"/>

                <ImageView
                    android:id="@+id/sigmoid_img"
                    android:layout_width="match_parent"
                    android:layout_height="250dp"
                    android:layout_marginTop="20dp"
                    android:contentDescription="@string/copy"
                    app:srcCompat="@drawable/sigmoid" />
            </LinearLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

    <androidx.coordinatorlayout.widget.CoordinatorLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabScrollToTop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:layout_gravity="end|top"
        android:visibility="invisible"
        android:src="@drawable/up_arrow"
        app:backgroundTint="@color/fab_button" />

    </androidx.coordinatorlayout.widget.CoordinatorLayout>

    <com.google.android.material.navigation.NavigationView
        android:id="@+id/nav_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:fitsSystemWindows="true"
        app:headerLayout="@layout/nav_header"
        app:menu="@menu/menu_drawer" />
</androidx.drawerlayout.widget.DrawerLayout>